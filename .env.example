# Food Menu Management System - Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DB_HOST=localhost
DB_NAME=food_menu_system
DB_USER=root
DB_PASS=

# Application Configuration
APP_NAME="Food Menu Management System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Security Configuration
JWT_SECRET=your-secret-key-here-change-this-in-production
SESSION_LIFETIME=3600
PASSWORD_MIN_LENGTH=6

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=uploads/

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@menumanager.com
MAIL_FROM_NAME="Menu Manager"

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# Backup Configuration
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30
